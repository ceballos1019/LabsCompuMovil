<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="co.edu.udea.compumovil.gr8.lab2apprun.EventCreationFragment">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eventName"
        android:inputType="textNoSuggestions"
        android:hint="@string/Carrera"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/eventDistance"
        android:inputType="number"
        android:hint="@string/Distancia"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/eventDate"
        android:inputType="text"
        android:hint="@string/Fecha"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/eventDescription"
        android:inputType="textLongMessage"
        android:hint="@string/Descripcion"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/eventPlace"
        android:inputType="text"
        android:hint="@string/Lugar"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/eventPhone"
        android:inputType="number"
        android:hint="@string/Telefono"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Evento"
        android:id="@+id/btnCreateEvent"
        android:layout_gravity="center_horizontal"
        android:onClick="onClick"/>


</LinearLayout>